{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es6"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitReturns": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"]
  },
  "include": ["src", "tests"],
  "exclude": []
}